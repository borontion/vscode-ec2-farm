{
  "name": "ec2-farm",
  "displayName": "EC2 Farm",
  "publisher": "PengzhanZhao",
  "description": "",
  "version": "0.0.2",
  "license": "SEE LICENSE IN LICENSE.txt",
  "repository": {
    "type": "git",
    "url": "https://github.com/borontion/vscode-ec2-farm"
  },
  "icon": "resources/icon.png",
  "extensionDependencies": [
    "ms-vscode-remote.vscode-remote-extensionpack"
  ],
  "engines": {
    "vscode": "^1.76.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ec2-farm.configureAccount",
        "title": "Configure Account"
      },
      {
        "command": "ec2-farm.describeAccount",
        "title": "Describe Account"
      },
      {
        "command": "ec2-farm.describeInstance",
        "title": "Describe Instance"
      },
      {
        "command": "ec2-farm.startInstance",
        "title": "Start Instance"
      },
      {
        "command": "ec2-farm.stopInstance",
        "title": "Stop Instance"
      },
      {
        "command": "ec2-farm.attachInstance",
        "title": "Connect in New Window",
        "icon": "$(empty-window)"
      },
      {
        "command": "ec2-farm.cleanupAccount",
        "title": "Cleanup Account"
      },
      {
        "command": "ec2-farm.refresh",
        "title": "Refresh Instance List",
        "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ec2-farm",
          "title": "EC2 Farm",
          "icon": "resources/ec2.svg"
        }
      ]
    },
    "views": {
      "ec2-farm": [
        {
          "id": "ec2-farm-instance-list",
          "name": "EC2 Farm Instance List"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "ec2-farm-instance-list",
        "contents": "Welcome to EC2 Farm! \n[Configure Account](command:ec2-farm.configureAccount)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "ec2-farm.refresh",
          "when": "view == ec2-farm-instance-list",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "ec2-farm.startInstance",
          "when": "view == ec2-farm-instance-list && viewItem == instance"
        },
        {
          "command": "ec2-farm.stopInstance",
          "when": "view == ec2-farm-instance-list && viewItem == instance"
        },
        {
          "command": "ec2-farm.attachInstance",
          "when": "view == ec2-farm-instance-list && viewItem == instance",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.76.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vscode/test-electron": "^2.2.3",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.5",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "aws-sdk": "^2.1336.0"
  }
}
